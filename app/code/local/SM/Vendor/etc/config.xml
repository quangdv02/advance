<?xml version="1.0"?>
<config>
    <modules>
        <SM_Vendor>
            <version>0.1.2</version>
        </SM_Vendor>
    </modules>
    <global>
        <models>
            <vendor>
                <class>SM_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>SM_Vendor_Model_Resource</class>
                <entities>
                    <vendor>
                        <table>sm_vendor</table>
                    </vendor>
                </entities>
            </vendor_resource>
        </models>
        <blocks>
            <vendor>
                <class>SM_Vendor_Block</class>
            </vendor>
        </blocks>
        <helpers>
            <vendor>
                <class>SM_Vendor_Helper</class>
            </vendor>
        </helpers>
        <resources>
            <vendor_setup>
                <setup>
                    <module>SM_Vendor</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </vendor_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>SM_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <vendor>
                    <file>sm/vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <SM_Vendor after="Mage_Adminhtml">SM_Vendor_Adminhtml</SM_Vendor>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
</config>